<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The dark side of cgs</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .nav > li:hover .dropdown-menu {
            display: block;
            background-color: black;
        }

        footer {
            background-color: black;
            color: white;
        }

        #articles {
            background: url(/images/Article/thewall.jpg) center center scroll;
            width: 100%;
            padding: 50px 0;
            color: #fff;
            margin: -90px,0;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
            -o-background-size: cover;
        }

        .brick {
            padding-top: 300px;
            padding-left: 920px;
        }
    </style>

</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The dark side of cgs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand page-scroll" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#articles">写字的地方</a>
                    </li>
                    @*<li class="dropdown">
                            <a href="#hobby" class="dropdown-toggle page-scroll" data-toggle="dropdown">存在的证据</a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("纸做的墙", "Index", "Books")</li>
                                <li>@Html.ActionLink("浮光掠影", "Index", "Movies")</li>
                                <li>@Html.ActionLink("雁过留声", "Index", "Music")</li>
                                <li>@Html.ActionLink("另一场人生", "Index", "Games")</li>
                            </ul>

                        </li>*@
                    @*<li><a class="page-scroll" href="#footprint">走过的路</a></li>
                        <li><a class="page-scroll" href="#now">此时此刻</a></li>*@
                    <li>
                        <a class="page-scroll" href="#contact">在这里找到我</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer>
        <div class="container text-center">
            <a href="#intro" class="btn btn-circle page-scroll">
                <i class="fa fa-angle-double-up animated circle"></i>
            </a>
            <hr style="border:black" />
            <p>&copy; @DateTime.Now.Year - The dark side of cgs</p>
            @{Html.RenderPartial("_LogonPartial");}
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model CgsSite.Web.Models.EditArticleModel

@{
    ViewBag.Title = "编辑文章";
}
<div class="container" id="pagetop">
    @using (Html.BeginForm())
    {
        <h2>改点东西</h2>
        @Html.HiddenFor(m=>Model.Id)
        <div class="form-group">
            @Html.LabelFor(m => Model.Subject)
            @Html.TextBoxFor(m => Model.Subject, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => Model.Subject)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Body)
            @Html.TextAreaFor(m => Model.Body, new { rows = 15, style = "width: 100%;", @class = "form-control tinymce" })
            @Html.ValidationMessageFor(m => Model.Body)
        </div>
        <p>
            <input type="submit" value="发表" class="btn btn-primary" />
        </p>
    }
</div>
@section scripts{
    <script type="text/javascript" src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script type="text/javascript" src="~/Scripts/AddOrEditArticle.js"></script>
}

